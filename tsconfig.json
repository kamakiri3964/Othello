{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
      "target": "ES2020",
      "module": "esnext",
      "sourceMap": true,
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    }
  }